{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["node", "webdriverio/async", "mocha", "chai"]
  },
  "include": [
    "./tests/**/*",
    "./wdio.*.conf.ts"
  ],
  "exclude": ["node_modules"]
}
